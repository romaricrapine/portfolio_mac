                </div>
                <div class="col-sm-3 col-lg-3">
                    <div class="counter-box pt-4 pt-md-0">
                        <div class="counter-ico">
                            <span class="ico-circle"><i class="ion-ribbon-a"></i></span>
                        </div>
                        <div class="counter-num">
                            {% for counter in counters %}
                                <p class="counter">{{ counter.counterOfWin }}</p>
                            {% endfor %}
                            <span class="counter-text">Idée a voir</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--/ Section Portfolio Star /-->
    <section id="work" class="portfolio-mf sect-pt4 route">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="title-box text-center">
                        <h3 class="title-a">
                            Portfolio
                        </h3>
                        <p class="subtitle-a">
                            Voici mes créations
                        </p>
                        <div class="line-mf"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for project in projects %}
                    <div class="col-md-4">
                        <div class="work-box">
                            <a href="{{ vich_uploader_asset(project, 'imageFile') }}" data-lightbox="gallery-mf">
                                <div class="work-img">
                                    <img src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="" class="img-fluid">
                                </div>
                            </a>
                            <div class="work-content">
                                <div class="row">
                                    <div class="col-sm-10">
                                        <h2 class="w-title">{{ project.name }}</h2>
                                        <div class="w-more">

                                            {# TODO: Faire la page des projets #}
                                            {% for tag in project.tags %}
                                                <span class="w-ctegory" style="color: #0078ff"> {{ tag.name }} -</span>
                                            {% endfor %}
                                            <span class="w-date" style="text-transform: capitalize;"> {{ project.createdAt|format_datetime('medium', 'none') }} </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="w-like">
                                            <a href="{{ path('app_view_project_user', {'slug': project.slug}) }}">
                                                <span class="ion-ios-plus-outline"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!--/ Section Portfolio End /-->

